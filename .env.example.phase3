# ==============================================
# Auto Trading Assistant - Configuration
# Phase 3: Full Infrastructure
# ==============================================

# ==================
# Trading Credentials
# ==================
ROBINHOOD_USERNAME=your_robinhood_email
ROBINHOOD_PASSWORD=your_robinhood_password
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret

# ==================
# Notion Integration
# ==================
NOTION_API_KEY=your_notion_api_key
NOTION_DATABASE_ID=your_notion_database_id

# ==================
# Database
# ==================
# SQLite (default)
DATABASE_URL=sqlite:///data/trading_bot.db

# PostgreSQL (production)
# DATABASE_URL=postgresql://user:password@localhost:5432/trading_bot

# ==================
# Email Notifications
# ==================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=your_email@gmail.com

# ==================
# Webhook Notifications
# ==================
# Slack webhook
WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Discord webhook
# WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL

# ==================
# Trading Settings
# ==================
TRADING_SYMBOL=BTCUSD
TRADING_QUANTITY=0.001
CHECK_INTERVAL_SECONDS=60

# ==================
# Risk Management
# ==================
MAX_POSITION_SIZE=1000
STOP_LOSS_PERCENTAGE=5.0
TAKE_PROFIT_PERCENTAGE=10.0
MAX_DAILY_TRADES=10

# ==================
# Safety Settings
# ==================
PAPER_TRADING_MODE=true
DRY_RUN=true

# ==================
# Dashboard & API
# ==================
DASHBOARD_ENABLED=true
API_PORT=5000

# ==================
# Alert Settings
# ==================
ALERT_ON_TRADE=true
ALERT_ON_STOP_LOSS=true
ALERT_ON_TAKE_PROFIT=true
ALERT_ON_ERROR=true
DAILY_SUMMARY_ENABLED=true
DAILY_SUMMARY_TIME=18:00

# ==================
# Notes
# ==================
# 1. Copy this file to .env and fill in your credentials
# 2. Never commit .env file to version control
# 3. For Gmail, use App Password, not regular password
# 4. Start with PAPER_TRADING_MODE=true for testing
# 5. Set DRY_RUN=false only when ready for live trading